<h6>Dashboard</h6>
<h3>Welcome {{name}} </h3>
<p>Here are your traveller's stories</p>
{{#if stories}}
    <table class="stripped">
        <thead>
            <tr>
                <th>Tittle</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any logs for your travels</p>
{{/if}}